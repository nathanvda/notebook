<!DOCTYPE html>
%html
  %head
    %title Notebook
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

%body
  .topbar
    .topbar-inner
      .container
        %h3
          =link_to "Notebook", root_url
        %ul.nav
          %li
            = link_to "Home", root_url
          %li
            = link_to "About", about_url
        %ul.nav.secondary-nav
          %li{:class => 'dropdown', :'data-dropdown' => 'dropdown'}
            = link_to "Tools", '#', :class => 'dropdown-toggle'
            %ul.dropdown-menu
              %li
                = link_to "Import Google notebook", '#'
              %li
                = link_to "Do something else", '#'

  .container
    - flash.each do |name, msg|
      %div{:class => [name," alert-message"], :id => "flash_#{name}"}
        = msg
    = yield


